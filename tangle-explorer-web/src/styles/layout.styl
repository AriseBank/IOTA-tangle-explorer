@import "./media-mixin.styl"
@import "./workarounds.styl"

.container
  width 100%
  max-width 800px
  margin 0 auto

.mono-space {
  font-family: "Courier New", Courier, monospace
}

legend {
  border-bottom 1px solid #595959
  padding-top 5px
  padding-bottom 5px
  font-size 25px
  margin-top 15px
  color #595959
  width 100%
}

table
  &.striped {
      border-collapse: collapse;
      width: 100%;
      th, td {
          text-align: left;
          padding: 8px;
      }
      tr:nth-child(even){background-color: #f2f2f2}
  }

  &.wrap {
      table-layout fixed
      word-wrap break-word
  }

.info
  width auto
  padding 5px
  overflow:hidden
  .name
    font-weight bold
  .value
    word-break break-all
    font-size 15px

.error
  &.absence
    padding 15px
    color rgba(212, 37, 37, 0.62)
    font-weight bold
    text-align center

a
  text-decoration none
  color #333
  &:hover
    text-decoration underline

+mobile()
  .stretch
    &.mobile
      width 100%!important

  .hidden
    &.mobile
      display none

* {
  box-sizing: border-box;
}

.clearfix {
  clear both
}

.cut-text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.qr img {
  width 100%
}
